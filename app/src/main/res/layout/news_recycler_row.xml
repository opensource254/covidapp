<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/txt_twitter_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ministry of health kenya" />
        <TextView
            android:id="@+id/txt_twitter_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ministry of health kenya" />
        <TextView
            android:id="@+id/txt_twitter_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's stan to mtronic" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_twitter_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/imgplaceholder" />

        <TextView
            android:id="@+id/txt_post_time"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="11/20/2020" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>